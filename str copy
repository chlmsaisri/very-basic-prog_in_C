#include <stdio.h>
#include <string.h>

int main() {
    char s[] = "Hello, world!";
    char d[20];  // Make sure the destination string has enough space

    strcpy(d, s);

    printf("Copied string: %s\n", d);

    return 0;
}


-----------------------------



#include <stdio.h>

int main() {
    char str1[] = "Hello, world!";
    char str2[20];  // Make sure the destination string has enough space
    int i;

    for (i = 0; str1[i] != '\0'; i++) {
        str2[i] = str1[i];
    }
    str2[i] = '\0';

    printf("Copied string: %s\n", str2);

    return 0;
}
